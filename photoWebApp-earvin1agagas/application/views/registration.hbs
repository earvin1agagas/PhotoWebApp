<body >
    <header>
        <div><h1>Registration Form</h1></div>
    </header>
        <form id="register-form" class="form-grid-reg" method="POST" action="/users/register" enctype="application/x-www-form-urlencoded">
            <fieldset>
                <label>Username:</label>
                <input id="userName" name="username" type="text" placeholder="Username" required/>
                <br/>
                <label>Email:</label>
                <input id="email" name="email" type="email" placeholder="Email" required/>
                <br/>
                <label>Password:</label>
                <input id= "userPass" name ="password" type="password" placeholder="Password" required/>
                <br/>
                <label>Confirm Password:</label>
                <input id ="confirmPass" name="cpassword" type="password" placeholder="Confirm Password" required/>
                <br/>

                <div>
                <label>Are you over 13?</label>
                <input type="checkbox" required/>
                <br/>

                <label>I agree to the <a href="">TOS and Privacy Rules</a></label>
                <input type="checkbox" required/>
                </div>

            </fieldset>

            <button id="button" type="submit">Submit</button>
        </form>
</body>
</html>